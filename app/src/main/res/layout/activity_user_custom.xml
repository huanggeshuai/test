<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/edit"
    tools:context="com.example.huang.test.activity.UserCustomActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </android.support.v7.widget.Toolbar>
    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/Cardactname"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="4dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_below="@+id/title"
                    android:id="@+id/actnamelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="20dp">
                    <EditText
                        android:id="@+id/actname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="请输入活动名称"
                        />
                </android.support.design.widget.TextInputLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_below="@+id/Cardactname"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/choosevenues"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="4dp">
                    <TextView
                        android:gravity="center"
                        android:id="@+id/venuesname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="点击选择选择场地"
                         />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_below="@+id/choosevenues"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/venuestimeView"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="4dp">
                <TextView
                    android:gravity="center"
                    android:id="@+id/venuestime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="场馆持续时间"
                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_below="@+id/venuestimeView"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/chooseenliststarttime"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="4dp">
                <TextView
                    android:gravity="center"
                    android:id="@+id/enliststarttime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="选择报名开始时间"
                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_below="@+id/chooseenliststarttime"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/chooseactendtime"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="4dp">

                <TextView
                    android:id="@+id/enlistendtime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="选择报名结束时间" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_below="@+id/chooseactendtime"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/chooseactstarttime"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="4dp">
                <TextView
                    android:gravity="center"
                    android:id="@+id/actstarttime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="选择活动开始时间"
                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_below="@+id/chooseactstarttime"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/choosactendtime"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="4dp">
                <TextView
                    android:gravity="center"
                    android:id="@+id/actendtime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="选择活动结束时间"
                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_below="@+id/actmoneyView"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/choosactnumber"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="4dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_below="@+id/title"
                    android:id="@+id/actnumberlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="20dp">
                    <EditText
                        android:id="@+id/actnumber"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="参加活动人数"
                        />
                </android.support.design.widget.TextInputLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_below="@+id/choosactnumber"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/actdetailView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="4dp">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/actdetaillayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="20dp">
                    <EditText
                        android:inputType="textMultiLine"
                        android:gravity="left|top"
                        android:background="@drawable/bg_com"
                        android:id="@+id/actdetail"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:hint="活动说明"
                        />
                </android.support.design.widget.TextInputLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_below="@+id/choosactendtime"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/actmoneyView"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="4dp">
                    <TextView
                        android:gravity="center"
                        android:id="@+id/userpaymoney"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="所需费用"
                        />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_below="@+id/actdetailView"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/payview"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="4dp">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputmoneylayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="20dp">
                    <EditText
                        android:id="@+id/paymoney"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="参加活动所需费用"
                        />
                </android.support.design.widget.TextInputLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:layout_below="@+id/payview"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageview"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="4dp">
                <TextView
                    android:layout_gravity="center"
                    android:text="点击上传活动图片"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
               <ImageView
                   android:scaleType="centerCrop"
                   android:id="@+id/uploadimage"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>
            <RelativeLayout
                android:layout_below="@+id/imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_marginLeft="60dp"
                    android:text="确定"
                    android:id="@+id/submit"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/cancel"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_marginRight="60dp"
                    android:text="取消"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
